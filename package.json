{
  "name": "acore-vscode",
  "displayName": "Acore",
  "description": "Syntax highlighting, introspection, and Axiom Bridge support for Acore files.",
  "icon": "img/icon.png",
  "version": "0.1.0",
  "publisher": "Axiom",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/acore-vscode"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:acore"
  ],
  "contributes": {
    "languages": [
      {
        "id": "acore",
        "extensions": [
          ".acore",
          ".pkl"
        ],
        "filenames": [
          "AcoreProject",
          "PklProject"
        ],
        "aliases": [
          "Acore"
        ],
        "firstLine": "^#!/.*\\bacore\\b",
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./img/icon.svg",
          "dark": "./img/icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "acore",
        "scopeName": "source.acore",
        "path": "out/acore.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "punctuation",
        "description": "Punctuation symbols"
      },
      {
        "id": "string-escape",
        "description": "String escape characters"
      },
      {
        "id": "constant",
        "description": "Constants built into the language, such as booleans or nulls"
      },
      {
        "id": "error",
        "description": "Invalid parsing sequences"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "keyword": [
            "keyword.acore"
          ],
          "punctuation": [
            "punctuation.acore"
          ],
          "punctuationBracket": [
            "punctuation.bracket.acore"
          ],
          "control": [
            "keyword.control.acore"
          ],
          "error": [
            "invalid.illegal.acore"
          ],
          "stringEscape": [
            "constant.character.escape.acore"
          ],
          "constant": [
            "constant.character.language.acore"
          ]
        }
      }
    ],
    "configuration": {
      "title": "Acore",
      "properties": {
        "acore.lsp.path": {
          "type": "string",
          "default": null,
          "description": "Path to pkl-lsp jar file. This is an internal developer option."
        },
        "acore.lsp.debug.port": {
          "type": "integer",
          "default": 5005,
          "description": "Debug port to launch acore-lsp."
        },
        "acore.lsp.socket.port": {
          "type": "number",
          "description": "Port of the LSP socket to talk to."
        },
        "acore.lsp.socket.host": {
          "type": "string",
          "description": "Host of the LSP socket to talk to. Defaults to localhost."
        },
        "acore.cli.path": {
          "type": "string",
          "default": null,
          "description": "Path to acore/pkl executable",
          "scope": "Acore"
        },
        "acore.lsp.java.path": {
          "type": "string",
          "default": null,
          "description": "Path to java executable used to start acore-lsp."
        },
        "acore.formatter.grammarVersion": {
          "type": "string",
          "default": "2",
          "description": "Grammar version to use when formatting code",
          "enum": ["1", "2"]
        },
        "acore.projects.excludedDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of directories to exclude when discovering Acore/Pkl projects."
        }
      }
    },
    "commands": [
      {
        "category": "Acore",
        "title": "Sync Projects",
        "command": "acore.syncProjects"
      },
      {
        "category": "Acore",
        "title": "Download Package",
        "command": "acore.downloadPackage"
      }
    ]
  },
   "scripts": {
    "clean": "shx rm -rf out/",
    "build": "npm run clean && npm run build:pkl && npm run build:code && npm run build:tree-sitter && npm run build:copy-local-lsp",
    "build:pkl": "/Users/yashmakan/AxiomCore/acore/pkl-cli/build/executable/jpkl eval -m . src/pkl/index.pkl",
    "build:copy-local-lsp": "shx cp /Users/yashmakan/AxiomCore/acore-lsp/build/libs/pkl-lsp-0.5.3-SNAPSHOT.jar ./out/acore-lsp.jar",
    "build:local": "npm run clean && npm run build:pkl && npm run build:code && npm run build:tree-sitter:local && npm run build:copy-local-lsp",
    "build:tree-sitter": "shx mkdir -p out/grammar/ && cd node_modules/@apple/tree-sitter-pkl && tree-sitter build --wasm && shx mv tree-sitter-pkl.wasm ../../../out/acore.wasm",
    "build:tree-sitter:local": "shx mkdir -p out/grammar/ && cd node_modules/@apple/tree-sitter-pkl && tree-sitter build --wasm && cd - && mv node_modules/@apple/tree-sitter-pkl/tree-sitter-pkl.wasm out/acore.wasm",
    "build:code": "shx mkdir -p out/ && shx cp node_modules/web-tree-sitter/tree-sitter.wasm out/ && tsc",
    "lint:fix": "prettier -w src/",
    "lint": "prettier -c src/",
    "watch": "tsc --watch",
    "test": "npm run test:grammar",
    "test:grammar": "sh scripts/check-grammar.sh",
    "prepackage": "npm run build",
    "package": "shx mkdir -p .dist/vscode && vsce package --out .dist/vscode/acore-vscode-$npm_package_version.vsix",
    "preinstallextension": "npm run package",
    "installextension": "code --install-extension .dist/vscode/acore-vscode-$npm_package_version.vsix"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@apple/tree-sitter-pkl": "^0.20.0",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.59.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tree-sitter-cli": "^0.25.10",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.6.2",
    "@vscode/test-electron": "^2.5.2"
  }
}